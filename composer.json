{
  "name": "yamadashy/laravel-blade-minify-directive",
  "description": "@minify directive to partially compress HTML.",
  "keywords": [
    "laravel",
    "blade",
    "minify",
    "directive"
  ],
  "homepage": "https://github.com/yamadashy/laravel-blade-minify-directive",
  "license": "MIT",
  "authors": [
    {
      "name": "Kazuki Yamada",
      "email": "koukun0120@gmail.com"
    }
  ],
  "require": {
    "php": "^7.2 || ^8.0",
    "laravel/framework": "^5.7 || ^6.0 || ^7.0 || ^8.0",
    "mrclay/minify": "^3.0"
  },
  "require-dev": {
    "orchestra/testbench": "~3.7|^4.0|^5.0|^6.0",
    "phpstan/phpstan": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "Yamadashy\\MinifyDirective\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Yamadashy\\MinifyDirective\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "analyze": "phpstan analyze --ansi"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Yamadashy\\MinifyDirective\\MinifyDirectiveServiceProvider"
      ]
    }
  }
}
